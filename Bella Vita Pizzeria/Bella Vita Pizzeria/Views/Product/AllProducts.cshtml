@model ProductQueryModel
@{
    ViewBag.Title = "Products";
}

<partial name="_PageBannerPartial" model="@Model.Category" />

@if (Model.Products.Any())
{
    <p class="text-end">Total @Model.Products.Count() products</p>
    <div class="text-center row">
        @foreach (var p in Model.Products)
        {
            <div class="card text-center col-4" style="width: 20rem; ">
                <div class="card-body">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="nav-link text-dark">
                        <h5 class="card-title mt-1">@p.Title</h5>
                        <img class="card-img-top" src="data:image/png;base64,@p.Image" alt="Image" style="width: 250px; height: 150px;">
                        @if (p.Description != null && !string.IsNullOrEmpty(p.Description))
                        {
                            <p class="mb-0">@p.Description</p>
                            if (p.MaxmimumSize != null && string.IsNullOrEmpty(p.MaxmimumSize) == false && p.MaxmimumSize != "")
                            {
                                <p class="mb-0"><span class="fw-bold" style="color: red; font-size:25px;">@p.MinimumPrice - @p.MaximumPrice lv.</span></p>
                            }
                            if (p.MaxmimumSize == null || string.IsNullOrEmpty(p.MaxmimumSize) || p.MaxmimumSize == "")
                            {
                                <p class="mb-0"><span class="fw-bold" style="color: red; font-size:25px;">@p.MinimumPrice lv.</span></p>
                            }
                        }
                    </a>
                </div>
            </div>
        }
    </div>
}
@if (Model.Products.Any() == false)
{
    <h4 class="text-center">No result!</h4>
}

<br>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                @{
                    int previousPage = Model.CurrentPage - 1;
                }
                <a class="page-link"
                   asp-controller="Product"
                   asp-action="AllProducts"
                   asp-route-currentPage="@previousPage"
                   asp-route-category="@Model.Category">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.PagesCount; i++)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Product"
                   asp-action="AllProducts"
                   asp-route-currentPage="@i"
                   asp-route-category="@Model.Category">
                    @i
                </a>
            </li>
        }
        @if (Model.CurrentPage < Model.PagesCount)
        {
            <li class="page-item">
                @{
                    int nextPage = Model.CurrentPage + 1;
                }
                <a class="page-link"
                   asp-controller="Product"
                   asp-action="AllProducts"
                   asp-route-currentPage="@nextPage"
                   asp-route-category="@Model.Category">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}