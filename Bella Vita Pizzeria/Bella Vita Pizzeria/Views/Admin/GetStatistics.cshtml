@model OrdersStatisticModel
@{
    ViewBag.Title = "Statistics";
}

<div class="row">
    <div class="col-md-12">
        <h5>Orders made in @DateTime.Now.Year</h5>
        <div>
            <canvas id="chart" width="400" height="200"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const ctx = document.getElementById('chart');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["January",
                    "February",
                    "March",
                    "April",
                    "May",
                    "June",
                    "July",
                    "August",
                    "September",
                    "October",
                    "November",
                    "December"],
                datasets: [{
                    label: 'Orders made per month',
                    data: [@Model.MonthsCounts[1],
        @Model.MonthsCounts[2],
        @Model.MonthsCounts[3],
        @Model.MonthsCounts[4],
        @Model.MonthsCounts[5],
        @Model.MonthsCounts[6],
        @Model.MonthsCounts[7],
        @Model.MonthsCounts[8],
        @Model.MonthsCounts[9],
        @Model.MonthsCounts[10],
        @Model.MonthsCounts[11],
        @Model.MonthsCounts[12]],
                    borderWidth: 1,
                    backgroundColor: "rgba(255,0,0,0.5)",
                    borderColor: "rgba(255,0,0,1)",
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
